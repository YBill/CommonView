<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bill.commonwidget.ShapedImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/zyw"
            app:round_radius="3dp"
            app:shape_mode="round_rect" />

        <com.bill.commonwidget.AutoScaleImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/zyw"
            app:height_relative_width_aspect_ratio="0.5625" />//16:9

        <com.bill.commonwidget.AutoScaleFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:height_relative_width_aspect_ratio="0.3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/zyw" />

        </com.bill.commonwidget.AutoScaleFrameLayout>

        <com.bill.commonwidget.AutoScaleLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:width_relative_layout_width_aspect_ratio="0.3">//3:1

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/zyw" />

        </com.bill.commonwidget.AutoScaleLinearLayout>

        <com.bill.commonwidget.AutoScaleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:height_relative_width_aspect_ratio="0.5625"
            app:width_relative_layout_width_aspect_ratio="0.3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/zyw" />

        </com.bill.commonwidget.AutoScaleRelativeLayout>


        <com.bill.commonwidget.EllipsizeEndTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="This is a test of the full text of TextView. Not clickable"
            android:textColor="#000000"
            android:textSize="18sp"
            app:collapsingColor="#457ae6"
            app:collapsingText="全文"
            app:maxLine="1" />

        <com.bill.commonwidget.ExpandableTextView
            android:id="@+id/expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            app:animAlphaStart="1"
            app:animDuration="500"
            app:collapseMsg="收起"
            app:expandMsg="展开"
            app:maxCollapsedLines="1"
            app:showEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:drawablePadding="5dp"
                android:textColor="#00ffff" />
        </com.bill.commonwidget.ExpandableTextView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>